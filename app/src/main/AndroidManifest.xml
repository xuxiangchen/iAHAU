<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.peacesky.iahau">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="net.peacesky.iahau.application.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity
            android:name="net.peacesky.iahau.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="net.peacesky.iahau.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="net.peacesky.iahau.activity.CourseActivity"
            android:label="@string/title_activity_course"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="net.peacesky.iahau.activity.GradeActivity"
            android:label="@string/title_activity_grade"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="net.peacesky.iahau.activity.ReGradeActivity"
            android:label="@string/title_activity_re_grade"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="net.peacesky.iahau.activity.AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="net.peacesky.iahau.activity.SplashActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.peacesky.iahau.activity.SettingActivity"
            android:label="@string/title_activity_setting"></activity>
    </application>

</manifest>
